<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aakash.mycambriancourses">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/courses"
        android:label="@string/app_name"
        android:roundIcon="@drawable/courses"
        android:supportsRtl="true"
        android:theme="@style/LightTheme"
        android:windowSoftInputMode="adjustResize">
        <activity
            android:name=".AboutUs"
            android:exported="true" />
        <activity
            android:name=".AddCourses"
            android:exported="true" />
        <activity
            android:name=".EditProfileActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".CourseViewActivity" />
        <activity android:name=".RemoveCoursesActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".CoursesListActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>