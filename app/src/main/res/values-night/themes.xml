<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:text">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>


    <style name="TitleTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="RemoveCoursesTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>


    <style name="PopularCoursesTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="NavigationDrawerTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="CoursesListTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="CourseViewTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="RegisterEditText" parent="Widget.AppCompat.EditText">
        <item name="android:text"> </item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="RegisterButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">15dp</item>
        <item name="fontFamily">sans-serif-black</item>

    </style>

    <style name="ProfileTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProfileButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">10dp</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>


    <style name="LoginTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LoginButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">10dp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="EditProfileEditText" parent="Widget.AppCompat.EditText">
        <item name="android:text"> </item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="DescriptionText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>