<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCourses"
    android:orientation="vertical">


    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar_custom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditProfileEditText"
            android:hint="Course Name"
            android:id="@+id/courseNameEditText"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditProfileEditText"
            android:hint="Course description"
            android:id="@+id/courseDescriptionEditText"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditProfileEditText"
            android:hint="Course Opportunity"
            android:id="@+id/courseOpportunityEditText"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditProfileEditText"
            android:hint="Course Image Link"
            android:id="@+id/courseImageLinkEditText"/>



        <Button
            android:id="@+id/courseAddButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            style="@style/LoginButton"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>